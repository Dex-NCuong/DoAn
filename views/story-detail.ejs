<!-- Comments section -->
<div class="comments-section">
  <div class="comments-header">
    <div class="comments-count">
      <span id="total-comments">0</span> bình luận
    </div>
    <div class="sort-wrapper">
      <select id="comment-sort">
        <option value="newest">Mới nhất</option>
        <option value="oldest">Cũ nhất</option>
        <option value="likes">Nhiều lượt thích</option>
      </select>
    </div>
  </div>

  <div class="comment-form">
    <div class="comment-avatar">
      <img
        src="/images/default-avatar.png"
        alt="User avatar"
        id="current-user-avatar"
        class="user-avatar"
      />
    </div>
    <div class="comment-form-wrapper">
      <div class="comment-input-wrapper">
        <textarea
          id="comment-input"
          class="comment-textarea"
          placeholder="Viết bình luận..."
          rows="1"
        ></textarea>
      </div>
      <div class="comment-form-actions" style="display: none">
        <button type="button" class="cancel-btn">Hủy</button>
        <button type="button" class="post-btn">Đăng</button>
      </div>
    </div>
  </div>

  <div id="comment-list"></div>
  <button id="load-more-comments" style="display: none">
    Xem thêm bình luận
  </button>
</div>
